@model UpdateCategoryDTO
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="card-body">
        <div class="form-group">
            <label for="CategoryName">Kategori Adını Giriniz</label>
            <input type="text" class="form-control  text-dark bg-light" asp-for="CategoryName" id="CategoryName">
        </div>
        <br />
        <button class="btn btn-outline-primary">Kategoriyi  Güncelle</button>
    </div>
</form>


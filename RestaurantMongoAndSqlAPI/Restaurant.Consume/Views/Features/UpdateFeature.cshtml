@model UpdateFeatureDTO
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="card-body">
        <div class="form-group">
            <label for="FeatureTitle">Başlığı Giriniz</label>
            <input type="text" class="form-control  text-dark bg-light" asp-for="FeatureTitle" id="FeatureTitle">

        </div>
        <div class="form-group">
            <label for="FeatureSubTitle">Alt Başlığı Giriniz</label>
            <input type="text" class="form-control text-dark bg-light" asp-for="FeatureSubTitle" id="FeatureSubTitle">

        </div>
        <div class="form-group">
            <label for="FeatureImageURL">Resim Yolunu  Giriniz</label>
            <input type="text" class="form-control text-dark bg-light" asp-for="FeatureImageURL" id="FeatureImageURL">

        </div>
        <br />
        <button class="btn btn-outline-primary">Öne Çıkanlar Bilgisini Güncelle</button>
    </div>
</form>


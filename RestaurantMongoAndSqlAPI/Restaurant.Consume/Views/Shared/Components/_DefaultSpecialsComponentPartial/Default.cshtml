@model List<ResultOurSpecialDTO>
<section id="specials" class="specials section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Restoranımıza Özel Ürünler</h2>
        <p>Restoranımıza Özel Ürünlere Göz Atın</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row">
            <div class="col-lg-3">
                <ul class="nav nav-tabs flex-column">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];
                        <li class="nav-item">
                            <a class="nav-link @(i == 0 ? "active show" : "")" data-bs-toggle="tab" href="#specials-tab-@i">
                                @item.OurSpecialColumnTitle
                            </a>
                        </li>
                    }
                </ul>
            </div>

            <div class="col-lg-9 mt-4 mt-lg-0">
                <div class="tab-content">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];
                        <div class="tab-pane fade @(i == 0 ? "active show" : "")" id="specials-tab-@i">
                            <div class="row">
                                <div class="col-lg-8 details order-2 order-lg-1">
                                    <h3>@item.OurSpecialTitle</h3>
                                    <p class="fst-italic">@item.OurSpecialContent</p>
                                </div>
                                <div class="col-lg-4 text-center order-1 order-lg-2">
                                    <img src="@item.OurSpecialImageURL" alt="" class="img-fluid">
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</section><!-- /Specials Section -->
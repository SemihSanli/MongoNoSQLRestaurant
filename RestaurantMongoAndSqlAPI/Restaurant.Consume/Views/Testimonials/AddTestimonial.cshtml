@model CreateTestimonialDTO
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<form method="post">
    <div class="card-body">
        <div class="form-group">
            <label for="TestimonialFullName">Ad Soyad</label>
            <input type="text" class="form-control  text-dark bg-light" asp-for="TestimonialFullName" id="TestimonialFullName">

        </div>
        <div class="form-group">
            <label for="TestimonialTitle">Ünvan</label>
            <input type="text" class="form-control text-dark bg-light" asp-for="TestimonialTitle" id="TestimonialTitle">

        </div>
        <div class="form-group">
            <label for="TestimonialComment">Yorum</label>
            <input type="text" class="form-control text-dark bg-light" asp-for="TestimonialComment" id="TestimonialComment">

        </div>
        <div class="form-group">
            <label for="TestimonialImageURL">Görsel URL </label>
            <input type="text" class="form-control text-dark bg-light" asp-for="TestimonialImageURL" id="TestimonialImageURL">

        </div>

        <br />
        <button class="btn btn-outline-primary">Referans Bilgisini Ekle</button>
    </div>
</form>

